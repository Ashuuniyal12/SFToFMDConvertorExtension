{
    "manifest_version": 3,
    "name": "SchemaForge Studio",
    "version": "1.3.1",
    "description": "Generate BigQuery Field Mapping Document from Salesforce Object Metadata",
    "permissions": [
        "activeTab",
        "storage",
        "downloads",
        "scripting",
        "cookies"
    ],
    "host_permissions": [
        "https://*.salesforce.com/*",
        "https://*.my.salesforce.com/*",
        "https://*.lightning.force.com/*",
        "https://*.salesforce-setup.com/*"
    ],
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "assets/icon16.png",
            "48": "assets/icon48.png",
            "128": "assets/icon128.png"
        }
    },
    "background": {
        "service_worker": "src/background.ts"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.salesforce.com/*",
                "https://*.lightning.force.com/*",
                "https://*.my.salesforce.com/*",
                "https://*.salesforce-setup.com/*"
            ],
            "js": [
                "src/content.ts"
            ]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com;"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}